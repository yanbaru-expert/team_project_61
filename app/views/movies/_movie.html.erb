<div class="col-12 col-md-6 col-lg-4">
  <div class= "card mb-3">
    <div class="embed-responsive embed-responsive-21by9">
      <%= embed_youtube(movie.url) %>
    </div>
    <div class="card-body">
      <p id="movie-<%= movie.id %>">
        <% if movie.watch_progressed_by?(current_user) %>
          <%= render "watch_progress", movie: movie %>
        <% else %>
          <%= render "dis_watch_progress", movie: movie %>
        <% end %>
      </p>
      <br>
    </div>
    <p class="card-title"><%= "Lv.#{movie_counter + @movies.offset_value + 1}:" %><%= movie.title %></p>
  </div>
</div>